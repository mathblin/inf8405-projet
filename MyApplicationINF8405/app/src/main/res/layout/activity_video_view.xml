<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context="com.example.ikram.myapplicationinf8405.VideoActivity">

    <Switch
        android:id="@+id/switchmode"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:checked="true"
        android:padding="2dp"
        android:text="Mode GYROSCOPE"

        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.799" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"></WebView>

    <Button
        android:id="@+id/hello_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginRight="3dp"
        android:text="Dit Bonjour!" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="279dp"
        android:layout_height="191dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="5dp"
        android:src="@drawable/w_smol" />

    <com.erz.joysticklibrary.JoyStick
        android:id="@+id/joy111"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:alpha="0.3"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/connection_lost"
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:layout_gravity="center|center"
        android:background="@color/colorIntermediate"
        android:alpha="0.6"
        android:gravity="center"
        android:text="@string/connection"
        android:textSize="22sp" />

</FrameLayout>
