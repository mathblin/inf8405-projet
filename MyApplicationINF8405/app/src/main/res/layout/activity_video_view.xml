<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context="com.example.ikram.myapplicationinf8405.VideoActivity">

    <Switch
        android:id="@+id/switchmode"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:checked="true"
        android:padding="5dp"
        android:text="Mode GYROSCOPE"

        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.799" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"></WebView>

    <Button
        android:id="@+id/hello_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_x="1126dp"
        android:layout_y="623dp"
        android:layout_marginRight="3dp"
        android:text="Dit Bonjour!" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="282dp"
        android:layout_height="105dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="5dp"
        android:src="@drawable/w_smol" />

    <com.erz.joysticklibrary.JoyStick
        android:id="@+id/joy111"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="3dp"
        android:visibility="visible"/>

</FrameLayout>
